                <li><a href="#"><i class="icon-folder-add"></i> Add project</a></li>
                <li><a href="#"><i class="icon-doc-add"></i> Add file</a></li>
                <li><a href="#"><i class="icon-cog-outline"></i> Update profile</a></li>
                <li><a href="#"><i class="icon-eject"></i> Logout</a></li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </section>

  {% block main %}{% endblock %}

  <!-- Include the scripts -->
  <script type="text/javascript" src="{{ asset('scripts/jquery-1.8.2.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('scripts/highlight.pack.js') }}"></script>
