{# src/Tornado/SiteBundle/Resources/views/Page/index.html.twig #}
{% extends 'TornadoSiteBundle::layout.html.twig' %}

{% block main %}

    {% include 'TornadoSiteBundle::Page/content/top.html.twig' %}
    {% include 'TornadoSiteBundle::Page/content/features.html.twig' %}

    <section id="home-page-forms" class="section angle-left swatch swatch-blue-white accent-white text-right">
        <div class="container content">
            <div class="grid-12 first-row text-centre">
                <h1>Try it out</h1>
                <div class="grid-6 align-centre" data-toggle="true" data-link="or paste some code" id="upload">
                    <div class="draggable draggable-upload">
                        <p><i class="icon-upload-cloud-outline"></i></p>
                        <p>Click or a drop a file to begin upload</p>
                    </div>

                    {# Include the upload file form #}
                    {% include 'TornadoSiteBundle::Page/partials/form.html.twig' with {'form': uploadFile, 'path': path('tornado_api_upload')} %}
                </div>
                <div id="upload-code" data-toggle="true" data-link="or upload a file" class="grid-6 align-centre hidden">
                    <div id="editor" class="text-left"></div>
                    <p class="upload-link"><button id="send-code" class="btn btn-info btn-big"><i class="icon-upload-cloud-outline"></i> Send source code</button>

                    {# Include the source code file #}
                    {% include 'TornadoSiteBundle::Page/partials/form.html.twig' with { 'form': uploadSource, 'path': path('tornado_api_upload')} %}
                </div>
                <p class="text-centre"><a href="#bind" id="link-toggle">or paste some code</a></p>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('scripts/app.js') }}" data-libraries="ace/ace,lib/menu,lib/binds,lib/forms"></script>
{% endblock %}
